

<div class="account-form-container">
  <section class="account-form">

     <!-- Registration Form -->
     <form id="student-login-form" action="/sign_up" method="post">
        <h3>Registration</h3>
        <nav class="navbar">
        </nav>
        <input type="text" required name="name" maxlength="50" placeholder="Enter your name" class="input">
        <input type="email" required name="email" maxlength="50" placeholder="Enter your email" class="input">
        <input type="password" required name="password" maxlength="20" placeholder="Enter your password" class="input">
        <input type="password" required name="confirmPassword" maxlength="20" placeholder="Confirm you password" class="input">
        <input type="hidden" name="role" value="student">
        <input type="submit" value="Register" name="submit" class="btn login-button">
     </form>

  </section>
</div>